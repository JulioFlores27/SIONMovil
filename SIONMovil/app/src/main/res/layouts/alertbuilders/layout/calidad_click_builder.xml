<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:id="@+id/ccAnalisisLote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Análisis Lote:" />
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Viscosidad:" />
        <EditText
            android:id="@+id/ccViscosidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="16sp"
            android:hint="Ingrese Viscosidad"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/ccDensidad" />
        <Spinner
            android:id="@+id/ccSpinnerViscosidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Densidad:" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Sólidos:" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Brillo:" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <EditText
            android:id="@+id/ccDensidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:hint="Ingrese Densidad"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/ccSolidos" />
        <EditText
            android:id="@+id/ccSolidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:hint="Ingrese Sólidos"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/ccBrillo" />
        <EditText
            android:id="@+id/ccBrillo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:hint="Ingrese Brillo"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/ccCantidad" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@color/purple_500"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Cantidad:" />
        <EditText
            android:id="@+id/ccCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:textSize="16sp"
            android:hint="Ingrese Cantidad"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/ccMateriaPrima" />
        <Spinner
            android:id="@+id/ccSpinnerCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Materia Prima:" />
        <EditText
            android:id="@+id/ccMateriaPrima"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="16sp"
            android:hint="Ingrese Materia Prima"
            android:inputType="textCapCharacters"
            android:nextFocusDown="@+id/ccAnalista" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        <CheckBox android:id="@+id/ccCheckFiltrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Filtrar"
            android:layout_marginEnd="15dp" />
        <CheckBox android:id="@+id/ccCheckMoler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Moler"
            android:layout_marginEnd="15dp" />
        <CheckBox android:id="@+id/ccCheckPNC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="PNC" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@color/purple_500"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Analista:" />
        <AutoCompleteTextView
            android:id="@+id/ccAnalista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="16sp"
            android:hint="Ingrese (Selecciona) Analista"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:text="Observaciones:" />
        <EditText
            android:id="@+id/ccObservaciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textSize="16sp"
            android:hint="Ingrese Observaciones"
            android:inputType="textCapWords" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical" >
        <Button
            android:id="@+id/botonAjuste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:text="ENVIAR AJUSTE" />
        <Button
            android:id="@+id/botonPreaprobar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:text="PREAPROBAR LOTE" />
        <Button
            android:id="@+id/botonLiberar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:text="LIBERAR LOTE" />
    </LinearLayout>
</LinearLayout>