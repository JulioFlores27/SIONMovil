<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="7dp">
        <TextView
            android:id="@+id/ehPedido"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="Pedido" />
        <TextView
            android:id="@+id/ehUsuario"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Usuario" />
        <TextView
            android:id="@+id/ehFecha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:layout_marginEnd="5sp"
            android:textColor="@color/purple_500"
            android:text="Fecha" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="7dp">
        <TextView
            android:id="@+id/ehTonos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_marginStart="5sp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="Tonos" />
        <TextView
            android:id="@+id/ehComentarioEninte"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:layout_weight="3"
            android:textColor="@color/purple_200"
            android:gravity="center"
            android:text="Comentario Eninte" />
        <TextView
            android:id="@+id/ehHora"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:textColor="@color/purple_500"
            android:layout_marginEnd="5sp"
            android:text="Hora" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2sp"
        android:layout_marginStart="60sp"
        android:layout_marginEnd="60sp"
        android:background="@color/purple_200"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="7dp">
        <TextView
            android:id="@+id/ehProducto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:textSize="18sp"
            android:layout_weight="2"
            android:textColor="@color/purple_500"
            android:gravity="center|start"
            android:text="Clave" />
        <TextView
            android:id="@+id/ehEnvase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Envase" />
        <TextView
            android:id="@+id/ehLote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lote" />
        <TextView
            android:id="@+id/ehFechaSalida"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:layout_marginEnd="5sp"
            android:text="Fecha" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="7dp">
        <TextView
            android:id="@+id/ehDiferencia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5sp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="@color/purple_500"
            android:gravity="center|start"
            android:text="Horas" />
        <TextView
            android:id="@+id/ehHoraSalida"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="center|end"
            android:layout_marginEnd="5sp"
            android:text="Hora" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2sp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:background="@color/purple_500"/>
</LinearLayout>